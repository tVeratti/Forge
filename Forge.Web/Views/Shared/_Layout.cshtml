@using Newtonsoft.Json
@{ 
    var user = JsonConvert.SerializeObject(User == null ? null : new
    {
        Id = User.Id,
        UserName = User.UserName
    });
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Color Bar -->
    <meta name="theme-color" content="#bd4635">
    <meta name="msapplication-navbutton-color" content="#bd4635">
    <meta name="apple-mobile-web-app-status-bar-style" content="#bd4635">

    <link href="https://fonts.googleapis.com/css?family=Droid+Sans:400,700" rel="stylesheet">
    @*@Scripts.Render("~/Scripts/vendor-js")*@    
    @Styles.Render("~/Styles/main-css")
</head>
<body>

    <div id="nav"></div>

    <div id="content">
        @RenderBody()
    </div>

    <div id="footer"></div>

    <!-- Scripts -->
    <script src="~/Content/scripts.js"></script>
    @RenderSection("scripts", required: false)

    <!-- Render -->
    <script type="text/javascript">
        ReactDOM.render(
            React.createElement(Forge.Nav, @Html.Raw(user)),
            document.getElementById('nav')
        );

        ReactDOM.render(
            React.createElement(Forge.Footer),
            document.getElementById('footer')
        );

        //if ('serviceWorker' in navigator){
        //    navigator.serviceWorker
        //        .register('../serviceworker.js')
        //}
    </script>
</body>
</html>
